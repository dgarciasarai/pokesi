      ],
      "client/**/*.js": [
        "npm run lint:js",
        "git add"
      ],
      "server/**/*.js": [
        "npm run lint:js",
        "git add"
      ]
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
